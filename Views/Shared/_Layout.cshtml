<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="~/js/fontawesome.js"></script>
    <title>@ViewData["Title"] - PortfolioWebsite</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="icon" href="~/favicon.png" sizes="16x16" type="image/png">
    <link href="navbar.css" rel="stylesheet"><script src="~/js/fontawesome.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/Images/BenKing.png" class="profile  ml-1 img-fluid mx-auto" alt="Benjamin King Photo"> &nbsp; Benjamin King
            </a> &nbsp
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-center" id="navbarsExample05">
                <ul class="navbar-nav mx-auto">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "") nav-item"><a class="nav-link" asp-conroller="Home" asp-action="Index">Home</a></li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "") nav-item"><a class="nav-link" asp-conroller="Home" asp-action="About">About Me</a></li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Resume" ? "active" : "") nav-item"><a class="nav-link" asp-conroller="Home" asp-action="Resume">Resume</a></li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Portfolio" ? "active" : "")  nav-item"><a class="nav-link" asp-conroller="Home" asp-action="Portfolio">Portfolio</a></li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "") nav-item"><a class="nav-link" asp-conroller="Home" asp-action="Contact">Contact</a></li>
                </ul>
                <div style="color: #000000">
                    <a href="https://github.com/benk9810nz" class="fab fa-github fa-2x mr-3" style="color: #333" title="GitHub" target="_blank"></a>
                </div>
                <a href="https://www.linkedin.com/in/benjamin-king-nz/" class="fab fa-linkedin fa-2x mr-3" style=" color: #0e76a8" title="LinkedIn" target="_blank"></a>
                <br>
                <a asp-action="Contact" class="btn btn-outline-primary rounded-pill mr-0">Get in Touch</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3" style="margin-top:105px;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p class="text-muted text-center mt-0 mb-0">Benjamin King &copy; 2020</p>
            </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
    <script src="~/js/popper.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
